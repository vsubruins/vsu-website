{
  "compilerOptions": {
    "target": "ES2020", // Updated for modern JavaScript features
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020" // Aligns with the target version
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Enable strict type-checking for better safety
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext", // Updated for compatibility with ES modules
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}